    "version": "0.2.0",
    "configurations": [
        {
            "name": "UI",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "PYTHONPATH": "sample/ui",
                "FLASK_APP": "sample/ui/app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--eager-loading",
                "--host",
                "localhost"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "PYTHONPATH": "sample/api",
                "FLASK_ENV": "development"
            },
            "args": [
                "main:app",
                "--host",
                "localhost",
                "--port",
                "8000",
                "--reload",
            ],
            "jinja": true,
            "justMyCode": false
        },
    ]
}